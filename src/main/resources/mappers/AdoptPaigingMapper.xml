          , views
          , delete_yn
          , postdate
          , updatedate
          FROM
          board
          <include refid="conditions" />
          ORDER BY
          id DESC, postdate DESC
          LIMIT #{pagination.limitStart}, #{recordPerPage}-->

        <!--<![CDATA[
                SELECT  id
                , title
                , content
                , writer
                , views
                , delete_yn
                , postdate
                , updatedate FROM (
                    SELECT rownum rn,
                           id
                           , title
                , content
                , writer
                , views
                , delete_yn
                , postdate
                , updatedate
                    FROM board
                    WHERE rownum <= #{recordPerPage}
                )
                WHERE rn> #{pagination.limitStart}
        ]]>-->  SELECT id
        , title
        , content
        , writer
