        , delete_yn
        , created_date
        , modified_date
          ,mem_nick
          FROM tb_adopt_board  <include refid="conditions" />
        ORDER BY id desc, created_date DESC
        offset #{adoptPagination.limitStart} ROWS FETCH NEXT #{recordPerPage} ROWS ONLY
    </select>

</mapper>